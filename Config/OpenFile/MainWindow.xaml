        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Name="DigitalSignageConfig"
        Title="Digital Signage Config"
        Icon="Images/icon.png"
        MaxWidth="1500"
        Height="870" Width="1500">
    <Window.Resources>
        <XmlDataProvider x:Key="Config" Source="Config.xml" XPath="Data"/>
        <Style TargetType="{x:Type GroupBox}" >
